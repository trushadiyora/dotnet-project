@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="auth-card forgot-card">
        <div class="auth-header">
            <i class="fas fa-key"></i>
            <h2>Reset Password</h2>
            <p>Enter your email to receive password reset instructions</p>
        </div>

        <form method="post" asp-action="ForgotPassword" class="auth-form">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="email"><i class="fas fa-envelope"></i> Email Address</label>
                <input id="email" name="email" type="email" class="form-control" placeholder="Enter your email" />
            </div>

            <button type="submit" class="btn btn-primary btn-full">
                <i class="fas fa-paper-plane"></i> Send Reset Email
            </button>

            <div class="auth-links">
                <a asp-action="Login" class="back-link">
                    <i class="fas fa-arrow-left"></i> Back to Login
                </a>
                <span>Remember your password?</span>
                <a asp-action="Register" class="register-link">
                    <i class="fas fa-user-plus"></i> Create Account
                </a>
            </div>
        </form>
    </div>
</div>
